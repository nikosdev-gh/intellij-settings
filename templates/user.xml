<templateSet group="user">
  <template name="log" value="private static final Logger LOG = java.util.logging.Logger.getLogger($CLASSNAME$.class.getName());" description="class logger generation" toReformat="true" toShortenFQNames="true">
    <variable name="CLASSNAME" expression="classname()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
</templateSet>